<%= link_to 'Back', current_user %>

<%= form_for :available_ingredient do |a| %>
  
  <%= a.label :ingredient_id %><br />
  <%= a.select :ingredient_id, options_from_collection_for_select(Ingredient.all, :id, :name) %><br />
  
  <%= a.label :measure_type_id %><br />
  <%= a.select :measure_type_id, options_from_collection_for_select(MeasureType.all, :id, :name) %><br />
  
  <%= a.label :qty %><br />
  <%= a.text_field :qty %><br />
  <%= submit_tag 'Add Ingredient' %>

<% end %>