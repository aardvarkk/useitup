<h1><%= @recipe.name %></h1>
<h2><%= link_to @recipe.user.email, @recipe.user %></h2>

<h3>Ingredients</h3>
<table>
  <tr>
    <th>Quantity</th>
    <th>Measure</th>
    <th>Ingredient</th>
    <th></th>
  </tr>
<% @recipe.recipe_ingredients.each do |i| %>
  <tr>
    <td><%= i.qty %></td>
    <td><%= i.measure_type.name %></td>
    <td><%= i.ingredient.name %></td>
    <td><%= button_to 'Remove', recipe_recipe_ingredient_path(@recipe, i.id), :method => :delete %></td>
  </tr>
<% end %>
</table>
<%= link_to 'Add Ingredient', new_recipe_recipe_ingredient_path(@recipe) %>

<h3>Steps</h3>
<ol>
<% @recipe.recipe_steps.each do |s| %>
  <li><%= s.step %><td><%= button_to 'Remove', recipe_recipe_step_path(@recipe, s.id), :method => :delete %></td></li>
<% end %>
</ol>
<p><%= link_to 'Add Step', new_recipe_recipe_step_path(@recipe) %></p>
<%= link_to 'Edit', edit_recipe_path(@recipe) %> |
<%= link_to 'Back', recipes_path %>
